<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    // 2 textView
    <TextView
        android:id="@+id/txtSpinerTH"
        android:background="@color/colorAccent"
        android:text="Tiet hoc"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtSpinerThu"
        android:layout_toRightOf="@+id/txtSpinerTH"
        android:background="@color/colorAccent"
        android:text="Thu"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    // 2 spinner
    <Spinner
        android:id="@+id/spinnerTietHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSpinerTH"
        android:layout_alignStart="@+id/txtSpinerTH"
        android:layout_below="@+id/txtSpinerTH" />

    <Spinner
        android:id="@+id/spinnerThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSpinerThu"
        android:layout_alignStart="@+id/txtSpinerThu"
        android:layout_below="@+id/txtSpinerThu" />

    // 2 button

    <Button
        android:id="@+id/btnHuyDialogTg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSpinerTH"
        android:layout_alignStart="@+id/txtSpinerTH"
        android:layout_below="@+id/spinnerTietHoc"
        android:layout_marginTop="30dp"
        android:text="Huy" />

    <Button
        android:id="@+id/btnDongYDialogTg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSpinerThu"
        android:layout_alignStart="@+id/txtSpinerThu"
        android:layout_alignBaseline="@+id/btnHuyDialogTg"
        android:text="Dong Y" />

</RelativeLayout>
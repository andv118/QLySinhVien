<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vanando.quanlysinhvien.activity.SuaLopHocActivity">

    <TextView
        android:background="#4A148C"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:padding="5dp"
        android:gravity="center"
        android:text="Sửa Thông Tin Lớp Học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    // lop
    <TextView
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:text="Tên lớp học: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTenLopHocSua"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:hint="Lớp học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    // thoi gian
    <TextView
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:text="Thời gian học : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnThoiGianSua"
            android:padding="5dp"
            android:gravity="center"
            android:text="Thời gian"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnThuSua"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:gravity="center"
            android:text="Thứ trong tuần"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/edtThoiGianSua"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnThoiGianSua"
            android:layout_below="@+id/btnThoiGianSua"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:enabled="false"
            android:hint="Thời gian"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtThuSua"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnThuSua"
            android:layout_below="@+id/btnThuSua"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:enabled="false"
            android:hint="Thứ "
            android:textSize="25sp" />

    </RelativeLayout>

    // phong
    <TextView
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:text="Phòng học : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtPhongHocSua"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:hint="Phòng học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHuySua"
            android:padding="5dp"
            android:gravity="center"
            android:text="Hủy"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnThemSua"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:gravity="center"
            android:text="Update"
            android:layout_marginRight="50dp"
            android:layout_width="100dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</LinearLayout>

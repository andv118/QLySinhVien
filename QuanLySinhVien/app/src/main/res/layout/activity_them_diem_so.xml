<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diem_So.activity.ThemDiemSoActivity">

    // linear title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearThemDiemSo"
        android:background="#FF9800"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tên SV"
            android:layout_marginTop="11dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Điểm CC"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Điểm KT"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Điểm  TH"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Điểm KTM"
            android:textSize="15sp" />

    </LinearLayout>

    // relative edt
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linearThemDiemSo"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/diemSo_txtTen_ThemDiem"
            android:text="Pham Vu Viet Thang"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/diemSo_txtMaSV_ThemDiem"
            android:layout_below="@+id/diemSo_txtTen_ThemDiem"
            android:text="MSV:B15VT101"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/diemSo_edtCC_ThemDiem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/diemSo_txtTen_ThemDiem"
            android:gravity="center"
            android:text="10"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/diemSo_edtKT_ThemDiem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/diemSo_edtCC_ThemDiem"
            android:gravity="center"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/diemSo_edtTH_ThemDiem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/diemSo_edtKT_ThemDiem"
            android:gravity="center"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/diemSo_edtKTM_ThemDiem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/diemSo_edtTH_ThemDiem"
            android:gravity="center"
            android:textSize="15sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/diemSo_btnInsert_ThemDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/diemSo_btnUpdate_ThemDiem"
        android:layout_marginTop="220dp"
        android:text="Insert" />

    <Button
        android:id="@+id/diemSo_btnUpdate_ThemDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/diemSo_btnBack_ThemDiem"
        android:layout_marginBottom="200dp"
        android:text="Update" />

    <Button
        android:id="@+id/diemSo_btnBack_ThemDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="135dp"
        android:text="Back" />

</RelativeLayout>
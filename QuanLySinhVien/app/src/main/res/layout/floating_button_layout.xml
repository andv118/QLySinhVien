<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="#1ebb59"
            android:backgroundTintMode="screen"
            app:menu_fab_label=""
            app:menu_fab_size="normal"
            app:menu_labels_colorNormal="#FFFFFF"
            app:menu_labels_colorPressed="@color/colorAccent"
            app:menu_labels_textColor="#424242"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabThemLopHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_group_white_24dp"
                app:fab_label="Thêm lớp học"
                app:fab_size="mini"
                android:visibility="gone"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabThemSinhVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_person_outline_white_24dp"
                app:fab_label="Thêm Sinh Viên"
                app:fab_size="mini"
                android:visibility="gone"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabDiemDanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/fab_diemdanh"
                app:fab_label="Điểm danh"
                app:fab_size="mini"
                android:visibility="gone"/>

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diem_So.activity.XepLoaiSVActivity">

    // linear title
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearThemDiemSo"
        android:weightSum="10"
        android:background="#FF9800"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DS_txtTen_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tên SV"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Điểm TB"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Điểm XL"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="XL"
            android:textSize="15sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/DS_listView_XepLoai"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearThemDiemSo" />

    <Button
        android:id="@+id/DS_btnHuy_XepLoai"
        android:layout_below="@+id/DS_listView_XepLoai"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
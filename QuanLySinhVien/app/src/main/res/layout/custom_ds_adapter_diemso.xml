<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // relative edt
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linearThemDiemSo"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/DS_txtTen_XemDiem"
            android:text="Pham Vu Viet Thang"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/DS_txtCC_XemDiem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/DS_txtTen_XemDiem"
            android:gravity="center"
            android:text="10"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/DS_txtKT_XemDiem"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/DS_txtCC_XemDiem"
            android:gravity="center"
            android:text="9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/DS_txtTH_XemDiem"
            android:layout_width="57dp"
            android:text="10"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="54dp"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/DS_txtKTM_XemDiem"
            android:layout_width="55dp"
            android:text="9"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>